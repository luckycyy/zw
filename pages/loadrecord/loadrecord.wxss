/* pages/loadrecord/loadrecord.wxss */
@import "../lib/weui.wxss";
.list {
	flex-direction: row;
	display:flex;  /*弹性盒子*/
	justify-content: space-between;  /*两端对齐，子元素之间有间隙*/
	flex-flow: row wrap;/*子元素溢出父容器时换行*/
}
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:50%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 50%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}

.animation{
   background: rgba(0,0,0,0.2); 
  /* background: #000; */
  z-index: 999;
  float: left;
  right: 0vh;
  width: 100%;
  height: 100%;
}
.animation-content{
  width: 75%;
  height: 100%;
  background: #fff;
  position: absolute;
  right: 0;
}